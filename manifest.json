{
    "manifest_version": 3,
    "name": "History Clear",
    "version": "1.0",
    "description": "Clear browsing history with a single click.",
    "permissions": ["history"],
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/history_clear_icon_16x16.png",
        "32": "icons/history_clear_icon_32x32.png",
        "48": "icons/history_clear_icon_48x48.png",
        "128": "icons/history_clear_icon_128x128.png"
    }
}
